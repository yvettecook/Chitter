<a href="users/new">Sign Up</a>

<form action='/sign_in' method="post">
	Sign In<br>
	Username<input type="text" name="username">
	Password<input type="password" name="password">
	<input type="submit" value="Sign In" name="Sign In">
</form>

<% if current_user %>
	Welcome <%= current_user.name %>
	<form action="/sign_out" method="post">
		<input type="submit" value="Sign Out" name="Sign Out">
	</form>
<% end %>

<% if flash[:notice] %>
	<div id="notice">
		<%= flash[:notice] %>
	</div>
<% end %>

<% if flash[:errors] && !flash[:errors].empty? %>
	<ul id="errors">
		<% flash[:errors].each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
<% end %>

<form action="/new_peep" method="post">
	<input type="text" name="content" value="<%= @peep.content %>">
	<input type="submit" value="Peep it!">
</form>